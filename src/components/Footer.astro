---
import Links from './Links.astro';
import '../styles/global.styl';
---

<footer>
  <div class="control pt-24 pb-32">
      <div class="footer-content my-24">
        <Links />
      </div>
      <div class="footer-content mb-8 italic">
          <h3 class="inline">Alvar Sirlin</h3>
      <p class="copy inline">&copy; {new Date().getFullYear()} All rights reserved.</p>
      </div>
  </div>
</footer>
  
<style lang="styl" is:global>
  footer a
  footer .ext-link
  .copy
  h3
    Xcolor #eedc77

  footer a 
    text-decoration:none
    &:hover 
      text-decoration underline
  
  footer 
    background-color #333;
    Xbackground linear-gradient(109.6deg, rgb(20, 30, 48) 11.2%, rgb(36, 59, 85) 91.1%);
    background-image: linear-gradient(0deg, #ff033e ,#FF3103);
    background-size: 400% 400%;
    height: 100%;
    width: 100%;
    color: #fff;
    animation gradient 4s ease infinite
  
  .home footer
    background transparent
    background-image none
    border-top 1px solid #fff
    margin-top 20rem

  

  @keyframes gradient 
    0% 
      background-position: 51% 0%;
    
    50% 
      background-position: 50% 100%;
    
    100% 
      background-position: 51% 0%;
    
  footer ul 
    list-style: none;
    padding: 0;
    display: flex;
    gap: 1rem;
    justify-content: center;
</style>