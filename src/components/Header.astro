---
import Hamburger from './Hamburger.astro';


interface Props {
	section?: string;
}

const isHomepage = Astro.url.pathname === '/';

const { section } = Astro.props;
const sectionColor = `color-${section}`;
const sectionName = section.replace(/-/g, ' ');

---
{!isHomepage && 
<div id='header'>
    <div class="header flex control py-4  {visible && <p>Show me!</p>}">
        <div>
            <a href='/'>Alvar Sirlin <span class="ml-2 role">Front End Developer</span></a>
        </div>
        <div id='section-name' class:list={['ml-8', 'section-name', sectionColor]}>
            {sectionName} 
        </div>
        <div class="nav grow flex justify-end relative">
            <Hamburger section={section} />
        </div>
    </div>
</div>
}
<style define:vars={{ sectionColor }}
>

    #header  {
        background-color: #fff;
    }
    
    .role {
        color: #808080;
    }

    



</style>