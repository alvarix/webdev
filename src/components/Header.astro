---

interface Props {
	section: string;
}

const isHomepage = Astro.url.pathname === '/';

const { section } = Astro.props;
const sectionSlug = toKebabCase(section);
const sectionColor = `color-${sectionSlug}`;
function toKebabCase(input) {
  return input.toLowerCase().replace(/\s+/g, '-');
}
---
{!isHomepage && 
<header>
    <div class="flex control py-2  {visible && <p>Show me!</p>}">
        <div>
            <a href='/'>Alvar Sirlin <span class="ml-2 role">Front End Developer</span></a>
        </div>
        <div class:list={['ml-8', 'section', sectionColor]}>
            { section } 
        </div>
    </div>
</header>
}
<style define:vars={{ sectionColor }}
>

    header  {
        background-color: #fff;
    }
    
    .role {
        color: #808080;
    }

    



</style>