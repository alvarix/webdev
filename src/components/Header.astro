---
import Hamburger from './Hamburger.astro';


interface Props {
	section?: string;
}

const isHomepage = Astro.url.pathname === '/';

const { section= 'default' } = Astro.props;
const sectionColor = `color-${section}`;
const sectionName = section.replace(/-/g, ' ');
---
{!isHomepage && 
<div id='header'>
    <div class="header flex items-end control py-4 {visible && <p>Show me!</p>}">
        <div>
            <a href='/'>Alvar Sirlin <span class="title block md:inline md:ml-2 role">Front End Developer</span></a>
        </div>
        <div class:list={['ml-4','min-[400px]:ml-8','section-name', sectionColor]}>
            {sectionName} 
        </div>
        <div class="nav grow flex self-center justify-end relative">
            <Hamburger section={section} />
        </div>
    </div>
</div>
}
<style define:vars={{ sectionColor }}
>

    #header  {
        background-color: #fff;
    }
    
    .role {
        color: #808080;
    }

    



</style>