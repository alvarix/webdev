<style lang="styl">	

nav.big li:nth-child(2) a 
	color: var(--color-case-studies)
	&:hover 
		background-color: var(--color-case-studies)
	 	color: white

nav.big li:nth-child(3) a 
	color: var(--color-bio)

nav.big li:nth-child(3) a:hover 
	background-color: var(--color-bio)
	color: white

nav li:nth-child(4) a 
	color: var(--color-contact)


nav.big li:nth-child(4) a:hover 
	background-color: var(--color-contact)
	color: white


footer 
	border-top 1px solid #fff

html 
	background-color #333;
	background-image: linear-gradient(135deg, #f34f76, #FF3103);
	background-image: linear-gradient(135deg, #ff8a00, #e52e71);
	background-size: 400% 400%;
	height: 200%;
	width: 100%;
	color: #fff;
	animation gradient 10s ease infinite

@keyframes gradient 
	0% 
	background-position: 51% 0%;

	50% 
	background-position: 50% 100%;

	100% 
	background-position: 51% 0%;


nav a 	
	width 100%
	@media screen and (min-width: 767px) 
		width 20rem


/* Stylus gremlins */
.hover-slide-text {
    margin-left: -15px;
}

h1 + p {
	margin-top: -0px;
}

.hover-slide-text 
	position relative
	display inline-block
	color black
	text-decoration none
	padding 10px 15px
	overflow hidden
	transition all 0.3s ease
	&::before 
		content ''
		position absolute
		top 0
		left -100%
		width 100%
		height 100%
		background-color black
		transition all 0.3s ease
		z-index -1
	&:hover 
		color white
		&::before 
			left 0

</style>