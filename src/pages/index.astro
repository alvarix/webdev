<style lang="styl">	
nav a 
	width 20rem

/* Stylus gremlins */
.hover-slide-text {
    margin-left: -15px;
}

.hover-slide-text::before {
    border-radius: var(--round);
}

.hover-slide-text 
	position relative
	display inline-block
	color black
	text-decoration none
	padding 10px 15px
	overflow hidden
	transition all 0.3s ease
	&::before 
		content ''
		position absolute
		top 0
		left -100%
		width 100%
		height 100%
		background-color black
		transition all 0.3s ease
		z-index -1
	&:hover 
		color white
		&::before 
			left 0

</style>